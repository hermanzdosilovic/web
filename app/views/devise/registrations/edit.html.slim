.col-xs-8.col-sm-8.col-md-6.col-lg-6.col-xs-offset-2.col-sm-offset-2.col-md-offset-3.col-lg-offset-3
  .login-panel.panel.panel-default.well
    .panel-heading
      h3 Edit #{resource_name.to_s.humanize}
    .panel-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = f.input :first_name, placeholder: resource.first_name, autofocus: true
          = f.input :last_name, placeholder: resource.last_name
          = f.input :email, placeholder: resource.email
          = f.input :password, autocomplete: "off", placeholder: "Leave blank if you don't want to change it"
          = f.input :password_confirmation, autocomplete: "off"
          = f.input :current_password, label: "Current password (#{link_to('Forgot your password?', new_password_path)})".html_safe, placeholder: 'We need your current password to confirm your changes'
          = f.submit 'Update', class: 'btn btn-primary'
          = link_to 'Cancel', root_path, class: 'btn'
          .pull-right
            = link_to 'Delete my account', registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
